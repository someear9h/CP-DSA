{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run (clean)",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "javac ${file} && java -cp ${fileDirname} ${fileBasenameNoExtension} < input.txt > output.txt && rm ${fileDirname}/${fileBasenameNoExtension}.class"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
